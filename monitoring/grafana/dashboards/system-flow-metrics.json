{
  "dashboard": {
    "title": "Podcast AI - System Flow Metrics",
    "description": "Metrics dashboard aligned with System Flow diagram",
    "tags": ["podcast-ai", "system-flow", "production"],
    "timezone": "browser",
    "editable": true,
    "panels": [
      {
        "id": 1,
        "title": "Total Workers Active",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(news_feed_workers_active + reviewer_workers_active + light_reviewer_workers_active + heavy_reviewer_workers_active + overseer_workers_active + presenter_workers_active + writer_workers_active + editor_workers_active + collections_workers_active + publishing_workers_active)",
            "legendFormat": "Total Workers"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Articles Per Hour",
        "type": "graph",
        "gridPos": {"h": 8, "w": 9, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "news_feed_articles_per_hour",
            "legendFormat": "Articles/Hr"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Articles"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Reviews Per Hour (All Services)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 9, "x": 15, "y": 0},
        "targets": [
          {
            "expr": "reviewer_light_total",
            "legendFormat": "Light Reviews"
          },
          {
            "expr": "reviewer_heavy_total",
            "legendFormat": "Heavy Reviews"
          },
          {
            "expr": "presenter_reviews_per_hour",
            "legendFormat": "Presenter Reviews"
          },
          {
            "expr": "editor_scripts_per_hour",
            "legendFormat": "Editor Reviews"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Reviews"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Workers by Service",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {"expr": "news_feed_workers_active", "legendFormat": "News Feed"},
          {"expr": "reviewer_workers_active", "legendFormat": "Reviewer"},
          {"expr": "light_reviewer_workers_active", "legendFormat": "Light Reviewer"},
          {"expr": "heavy_reviewer_workers_active", "legendFormat": "Heavy Reviewer"},
          {"expr": "overseer_workers_active", "legendFormat": "AI Overseer"},
          {"expr": "presenter_workers_active", "legendFormat": "Presenter"},
          {"expr": "writer_workers_active", "legendFormat": "Writer"},
          {"expr": "editor_workers_active", "legendFormat": "Editor"}
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 5,
        "title": "Scripts Per Hour",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "writer_scripts_per_hour",
            "legendFormat": "Scripts/Hr"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 6,
        "title": "Collection Status Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 8},
        "targets": [
          {"expr": "collections_total{status=\"building\"}", "legendFormat": "Building"},
          {"expr": "collections_total{status=\"ready\"}", "legendFormat": "Ready"},
          {"expr": "collections_total{status=\"used\"}", "legendFormat": "Used"},
          {"expr": "collections_total{status=\"expired\"}", "legendFormat": "Expired"}
        ]
      },
      {
        "id": 7,
        "title": "Service Latency (seconds)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {"expr": "reviewer_light_latency_seconds", "legendFormat": "Light Reviewer"},
          {"expr": "reviewer_heavy_latency_seconds", "legendFormat": "Heavy Reviewer"},
          {"expr": "editor_latency_seconds", "legendFormat": "Editor"},
          {"expr": "presenter_audio_duration_seconds", "legendFormat": "Presenter Audio Gen"}
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Episode Pipeline Status",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {"expr": "overseer_episodes_by_status{status=\"draft\"}", "legendFormat": "Draft"},
          {"expr": "overseer_episodes_by_status{status=\"voiced\"}", "legendFormat": "Voiced"},
          {"expr": "overseer_episodes_by_status{status=\"published\"}", "legendFormat": "Published"}
        ],
        "yaxes": [
          {"format": "short", "label": "Episodes"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Review Queue Length",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "reviewer_queue_length",
            "legendFormat": "Queue Length"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 10,
        "title": "Active Podcast Groups",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 24},
        "targets": [
          {
            "expr": "overseer_active_groups_total",
            "legendFormat": "Active Groups"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 3, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 11,
        "title": "Total Articles in System",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "news_feed_articles_total",
            "legendFormat": "Total Articles"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 12,
        "title": "Publishing Success Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 24},
        "targets": [
          {
            "expr": "publishing_success_total",
            "legendFormat": "Published"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "yellow"},
                {"value": 1, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "version": 1
  }
}


