# Podcast AI Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://podcast_user:podcast_pass@localhost:5432/podcast_ai

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# Local Storage Configuration
LOCAL_STORAGE_PATH=/app/storage
LOCAL_SERVER_URL=http://localhost:8080

# Service URLs (for development)
NEWS_FEED_SERVICE_URL=http://news-feed:8001
TEXT_GENERATION_SERVICE_URL=http://text-generation:8002
WRITER_SERVICE_URL=http://writer:8003
PRESENTER_SERVICE_URL=http://presenter:8004
PUBLISHING_SERVICE_URL=http://publishing:8005
AI_OVERSEER_SERVICE_URL=http://ai-overseer:8006
PODCAST_HOST_SERVICE_URL=http://podcast-host:8006

# VibeVoice Configuration
VIBEVOICE_MODEL=microsoft/VibeVoice-1.5B
VIBEVOICE_CACHE_DIR=/app/cache/vibevoice

# Audio Configuration
AUDIO_SAMPLE_RATE=22050
AUDIO_FORMAT=wav
AUDIO_STORAGE_PATH=/app/audio_storage

# Publishing Platform Credentials (example)
ANCHOR_API_KEY=your_anchor_api_key_here
ANCHOR_API_SECRET=your_anchor_api_secret_here
LIBSYN_API_KEY=your_libsyn_api_key_here
LIBSYN_API_SECRET=your_libsyn_api_secret_here

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Development Settings
DEBUG=False
RELOAD=False